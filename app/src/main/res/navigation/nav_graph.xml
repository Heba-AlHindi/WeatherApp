<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/locationFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.weatherapp.ui.details.DetailsFragment"
        android:label="home_fragment"
        tools:layout="@layout/details_fragment" >
        <argument
            android:name="city_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="time"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="icon"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="Coordination"
            app:argType="com.example.weatherapp.database.models.cityCurrentForecast.CoordinationEntity"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="current_details"
            app:argType="com.example.weatherapp.database.models.cityCurrentForecast.MainForecastEntity"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="wind_speed"
            app:argType="float"
            android:defaultValue="0.0"/>
        <argument
            android:name="main"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.weatherapp.ui.location.LocationFragment"
        android:label="pick_location_fragment"
        tools:layout="@layout/location_fragment">
        <action
            android:id="@+id/action_location_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/locationFragment">
        <argument
            android:name="city_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="time"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="icon"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="Coordination"
            app:argType="com.example.weatherapp.database.models.cityCurrentForecast.CoordinationEntity"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="current_details"
            app:argType="com.example.weatherapp.database.models.cityCurrentForecast.MainForecastEntity"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="wind_speed"
            app:argType="float"
            android:defaultValue="0.0"/>
        <argument
            android:name="main"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.weatherapp.ui.forecast_report.ForecastReportFragment"
        android:label="forecast_report_fragment"
        tools:layout="@layout/forecast_report_fragment" />

</navigation>